{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@repo/llm-core": ["../../packages/llm-core/src/contracts.ts"],
      "@repo/llm-core/*": ["../../packages/llm-core/src/*"]
    },
    "incremental": true
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts"]
}
